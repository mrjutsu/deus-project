<%= form_for(@teaching) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <% if @teaching.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teaching.errors.count, "error") %> prohibited this teaching from being saved:</h2>

      <ul>
      <% @teaching.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :teaching_name, class: "form-control", placeholder: "Nombre de la enseñanza" %>
