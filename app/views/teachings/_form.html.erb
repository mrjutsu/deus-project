    <%= f.text_area :summary, class: "form-control", placeholder: "Descripción de la enseñanza" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control froala-editor", placeholder: "Escribe aquí la enseñanza..." %>
