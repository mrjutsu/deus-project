<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo Electrónico" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %> Recordarme
      </label>
    </div>
  <% end -%>

  <%= f.submit "Iniciar Sesión", class: "btn btn-default" %>

  <%= link_to "Ingresar con Facebook", user_omniauth_authorize_path(:facebook) %>
<% end %>

<%= render "devise/shared/links" %>
