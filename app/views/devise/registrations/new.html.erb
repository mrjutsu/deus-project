<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :username, class: "form-control", placeholder: "Nombre De Usuario" %>
    <p class="help-block">
      Letras, números, guiones bajos y puntuación.
    </p>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo electrónico" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Contraseña" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Repetir Contraseña" %>
  </div>

  <%= f.submit "Registrarse", class: "btn btn-default" %>

  <%= link_to "Ingresar con Facebook", user_omniauth_authorize_path(:facebook) %>
<% end %>

<%= render "devise/shared/links" %>
